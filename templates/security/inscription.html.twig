{% extends 'base.html.twig' %}

{% block body %}

<section id="section-inscription">  
  <h3 class="titre-inscription">Inscription</h3>
    <div class="div-inscription">
      <br>
      <div class="champs-inscription">

        {{ form_start(form) }}

        {{ form_row(form.username, {'label': 'Pseudo','attr': {'placeholder': 'Votre pseudo'}}) }} <!-- Pour dÃ©finir les champs du formulaire -->
        {{ form_row(form.email, {'label': 'Email','attr': {'placeholder': 'Votre email'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Votre mot de passe'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe','attr': {'placeholder': 'Votre mot de passe'}}) }}
        {{ form_row(form.imageFile, {'label': 'Ajouter une photo de profil'}) }}
      
      
        <button type="submit" class="btn">Valider</button>
        {{ form_end(form) }}

      <br>
      </div>
    </div>
</section>
  
{% endblock %}
